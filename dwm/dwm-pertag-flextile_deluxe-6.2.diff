+static void
+arrange_fibonacci(Monitor *m, int x, int y, int h, int w, int ih, int iv, int n, int an, int ai, int s)
+{
+	int i, j, nv, hrest = 0, wrest = 0, nx = x, ny = y, nw = w, nh = h, r = 1;
+	Client *c;
+
+	for (i = 0, j = 0, c = nexttiled(m->clients); c; c = nexttiled(c->next), j++) {
+		if (j >= ai && j < (ai + an)) {
+			if (r) {
+				if ((i % 2 && ((nh - ih) / 2) <= (bh + 2*c->bw)) || (!(i % 2) && ((nw - iv) / 2) <= (bh + 2*c->bw))) {
+					r = 0;
+				}
+				if (r && i < an - 1) {
+					if (i % 2) {
+						nv = (nh - ih) / 2;
+						hrest = nh - 2*nv - ih;
+						nh = nv;
+					} else {
+						nv = (nw - iv) / 2;
+						wrest = nw - 2*nv - iv;
+						nw = nv;
+					}
+
+					if ((i % 4) == 2 && !s)
+						nx += nw + iv;
+					else if ((i % 4) == 3 && !s)
+						ny += nh + ih;
+				}
+				if ((i % 4) == 0) {
+					if (s) {
+						ny += nh + ih;
+						nh += hrest;
+					}
+					else {
+						nh -= hrest;
+						ny -= nh + ih;
+					}
+				}
+				else if ((i % 4) == 1) {
+					nx += nw + iv;
+					nw += wrest;
+				}
+				else if ((i % 4) == 2) {
+					ny += nh + ih;
+					nh += hrest;
+					if (i < n - 1)
+						nw += wrest;
+				}
+				else if ((i % 4) == 3) {
+					if (s) {
+						nx += nw + iv;
+						nw -= wrest;
+					} else {
+						nw -= wrest;
+						nx -= nw + iv;
+						nh += hrest;
+					}
+				}
+				if (i == 0)	{
+					if (an != 1) {
+						nw = (w - iv) - (w - iv) * (1 - m->mfact);
+						wrest = 0;
+					}
+					ny = y;
+				}
+				else if (i == 1)
+					nw = w - nw - iv;
+				i++;
+			}
+
+			resize(c, nx, ny, nw - 2 * c->bw, nh - 2*c->bw, False);
+		}
+	}
+}
